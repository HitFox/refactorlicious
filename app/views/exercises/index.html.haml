- alphabet = ("A".."Z").to_a
.exercises-container
  - @decorated_exercise_categories.each do |exercise_category|
    %h3.exercise-category= "#{exercise_category.name}"
    %ul{class: "exercises"}
      - exercise_category.approved_exercises.each_with_index do |exercise, i|
        %li
          .exercise{class: exercise.difficulty_level}
            = link_to alphabet[i], exercise_path(exercise)
            .points
              = "#{exercise.points} points"
            .exercise-icon
              = svg_icon(exercise.icon_class, asset_path("icons.svg##{exercise.icon_class}"))
